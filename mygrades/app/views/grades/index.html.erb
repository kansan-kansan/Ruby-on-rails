<h1>Grades#index</h1>
<p>Find me in app/views/grades/index.html.erb</p>

<p><%= link_to '新規追加', '/grades/new' %></p>
<% sum_score = 0 %>
<% sum_unit = 0 %>
<% human = 1 %>
<table border="1"> 
    <tr>
    <th>科目名</th>
    <th>単位</th>
    <th>点数</th>
    <th>削除</th>
    <th>表示</th>
    <th>編集</th>
    
    <tr>
    <% @grades.each do |grade| %>
    <tr>

    <td><%= grade.subject %></td>
    <td><%= grade.unit %></td>
    <td><%= grade.score %></td>
    <td><%= link_to '削除', "/grades/#{grade.id}", method: :delete %></td>
    <td><%= link_to '表示', "/grades/#{grade.id}" %></td>
    <td><%= link_to '編集', "/grades/#{grade.id}/edit" %></td>
    </tr>
    <% sum_unit += grade.unit %>
<% end %>
    
合計単位数:<%= sum_unit %>
</table>
